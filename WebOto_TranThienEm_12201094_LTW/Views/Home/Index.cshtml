@model WebOto_TranThienEm_12201094_LTW.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Trang Chủ";
}

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" data-bs-pause="false">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/cars/carousel-slide1.jpg" class="d-block w-100" alt="Trưng bày" style="max-height: 600px; object-fit: cover;">
        </div>
        <div class="carousel-item">
            <img src="/images/cars/carousel-slide2.jpg" class="d-block w-100" alt="Trưng bày" style="max-height: 600px; object-fit: cover;">
        </div>
        <div class="carousel-item">
            <img src="/images/cars/carousel-slide3.jpg" class="d-block w-100" alt="Trưng bày" style="max-height: 600px; object-fit: cover;">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Sản phẩm</h2>

    @if (Model != null && Model.LatestCars != null && Model.LatestCars.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var car in Model.LatestCars)
            {
                <div class="col">
                    <partial name="_CarCard" model="car" /><a href="d:\weboto_tranthienem_12201094_ltw\weboto_tranthienem_12201094_ltw\weboto_tranthienem_12201094_ltw\views\home\contact.cshtml"></a>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">Hiện chưa có xe mới nào.</p>
    }
</div>

@section Scripts {
    <script>
        var myCarousel = document.querySelector('#carouselExampleIndicators');
        if (myCarousel) {
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 3000,
                pause: false
            });
        }
    </script>
}
