@{
}
@model WebOto_TranThienEm_12201094_LTW.Models.ViewModels.CarViewModel

<div class="card h-100">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="height: 200px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Hãng: @Model.BrandName</p>
        <p class="card-text">Loại: @Model.CategoryName</p>
        <p class="card-text">Giá: @Model.FormattedPrice</p>
        <a asp-controller="Order" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-success mt-2">Đặt hàng</a>
        <a asp-controller="Cars" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary mt-2">Xem chi tiết</a>
    </div>
</div>