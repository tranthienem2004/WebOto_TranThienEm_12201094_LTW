@model WebOto_TranThienEm_12201094_LTW.Models.Car

@{
    ViewData["Title"] = "Chi tiết xe - " + Model.Name;
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Chi tiết xe: @Model.Name</h2>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" class="card-img-top" style="height:300px; object-fit:cover;" alt="@Model.Name" />
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Model.Name</h5>
                    <p><strong>Hãng:</strong> @Model.Brand?.Name</p>
                    <p><strong>Loại:</strong> @Model.Category?.Name</p>
                    <p><strong>Giá:</strong> @Model.Price.ToString("N0") VNĐ</p>
                    <p><strong>Màu sắc:</strong> @Model.Color</p>
                    <p><strong>Truyền động:</strong> @Model.Transmission</p>
                    <p><strong>Nhiên liệu:</strong> @Model.FuelType</p>
                    <p><strong>Quãng đường:</strong> @Model.Mileage.ToString("N0") km</p>
                    <p><strong>Địa điểm:</strong> @Model.Location</p>
                    <p><strong>Mô tả:</strong> @Model.Description</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="text-center">
                <a asp-controller="Order" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                    <i class="fas fa-shopping-cart"></i> Đặt mua xe này
                </a>
                <div class="mt-3">
                    <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
