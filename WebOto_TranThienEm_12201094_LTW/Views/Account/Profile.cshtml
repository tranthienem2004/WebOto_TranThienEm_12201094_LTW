@model WebOto_TranThienEm_12201094_LTW.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh; margin: 50px auto;">
    <div class="card shadow p-4" style="max-width: 550px; width: 100%; border-radius: 12px;">
        <h3 class="text-center text-primary mb-4"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h3>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!ViewData.ModelState.IsValid && TempData["ErrorMessage"] == null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Vui lòng kiểm tra lại các trường đã nhập.</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


        <form asp-action="Profile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên của bạn" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" readonly /> @* Email thường không cho phép chỉnh sửa *@
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ của bạn" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Lưu thông tin
                </button>
            </div>

            <div class="text-center mt-3">
                <p>
                    <a asp-action="ChangePassword" class="text-primary">Đổi mật khẩu</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}